<div class="col-md-5 col-md-offset-3">
	<%= content_for :title, @title %>
	<br/>
	<form class="form-horizontal" role="form" name="question_form" action="/questions/next">
		<div class="my_jumbotron">
			<% if @wrong_answer %>
				<div class="alert alert-danger alert-dismissable">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
						<strong>Wrong answer!</strong> <%= wrong_answer_message %>.
				</div>
			<% end %>
			<div class="input-group input-group-lg">
			  <span class="input-group-addon" name="presented_question">
			  	<%= @question[:operand1] %> <%= @question[:operator] %> <%= @question[:operand2] %> =
			  </span>
			  <input type="text" class="form-control" name="answer" id="answer_input" value="" autocomplete="off"/>
			</div>

			<div class="col-md-12">
			<br/>
				<table class="table table-bordered table-condensed table-responsive">
					<tr>
						<td><a type="button" class="btn btn-info btn-block keypad" name="1">1</a></td>
						<td><a type="button" class="btn btn-info btn-block keypad" name="2">2</a></td>
						<td><a type="button" class="btn btn-info btn-block keypad" name="3">3</a></td></tr>
					<tr>
						<td><a type="button" class="btn btn-info btn-block keypad" name="4">4</a></td>
						<td><a type="button" class="btn btn-info btn-block keypad" name="5">5</a></td>
						<td><a type="button" class="btn btn-info btn-block keypad" name="6">6</a></td></tr>
					<tr>
						<td><a type="button" class="btn btn-info btn-block keypad" name="7">7</a></td>
						<td><a type="button" class="btn btn-info btn-block keypad" name="8">8</a></td>
						<td><a type="button" class="btn btn-info btn-block keypad" name="9">9</a></td></tr>
					<tr><td><a type="button" class="btn btn-info btn-block keypad" name="0">0</a></td>
						<td><a type="button" class="btn btn-info btn-block keypadc" name="C">C</a></td>
						<td><a type="button" class="btn btn-info btn-block keypadd" name="D">D</a></td></tr>	
				</table>								
			</div>

			<p>
			<div class="btn-group btn-group-justified">
			  <div class="btn-group">
			    <button type="submit" class="btn btn-primary" name="next_button">Next</button>
			  </div>
			  <div class="btn-group">
			    <a type="button" class="btn btn-warning" href="/questions/skip" name="skip_button">Skip</a>
			  </div>
			  <div class="btn-group">
			    <a type="button" class="btn btn-danger" href="/questions/finish" id="finish_url" name="finish_button">Finish</a>
			  </div>
			</div>
			</p>
		</div>
	</form>
	<div class=hidden>
		<input type="text" class="form-control" name="correct_answer" id="expected_answer" value="<%= question[:answer] %>"/>
	</div>
</div>